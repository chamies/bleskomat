{
  "name": "bleskomat-app",
  "version": "0.0.1",
  "description": "The GUI application for project \"bleskomat\"",
  "main": "src/index.js",
  "scripts": {
    "start": "npm run build && ./node_modules/.bin/electron --disable-gpu main/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "./node_modules/.bin/vue-cli-service build",
    "lint": "npm run lint:main && npm run lint:renderer",
    "lint:main": "./node_modules/.bin/eslint --config .eslintrc.main.js \"./main/**/*.js\"",
    "lint:renderer": "./node_modules/.bin/eslint --config .eslintrc.renderer.js \"./renderer/src/**/*.{js,vue}\"",
    "prettier": "./node_modules/.bin/prettier --write \"./main/**/*.js\" \"./renderer/src/**/*.{js,vue}\" \"*.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Learn-by-doing/bleskomat.git"
  },
  "author": "",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/Learn-by-doing/bleskomat/issues"
  },
  "homepage": "https://github.com/Learn-by-doing/bleskomat#readme",
  "devDependencies": {
    "@vue/cli-service": "3.11.0",
    "babel-eslint": "10.0.1",
    "electron": "6.0.3",
    "eslint": "5.16.0",
    "eslint-plugin-vue": "5.0.0",
    "prettier": "1.18.2",
    "vue-router": "3.1.2",
    "vue": "2.6.10",
    "vue-template-compiler": "2.6.10"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
